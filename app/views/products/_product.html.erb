<% cache product do %>
  <div class="product-item">
    <a href="<%=product_path(product) %>"><div class="product-container">
      <div class="image-container" style="display: block; width: 300px; height: 200px">
        <%= image_tag(product.image_url, class: "img-responsive listing-image") %>
      </div>
      <h1><%= product.name %></h1>
      <p><%= product.description[0..300] %></p>
    </div></a><!-- /col -->
  </div>
<% end %>
