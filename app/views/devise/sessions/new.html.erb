<div class="container">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "new_user form"}) do |f| %>

        <h2 class="form-signin-heading">Please Log In</h2>
        <%= devise_error_messages! %>

          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, type: "email", class: "form-control", placeholder: "Email address", required: "" %>


          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", placeholder: "Password", required: "" %>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %>Remember me
            </label>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
</div>
