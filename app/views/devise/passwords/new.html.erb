<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>

    <h2 class="form-signin-heading">Forgot your password?</h2>
    <%= devise_error_messages! %>
    <p>Enter your email address below and we'll send you a link with instructions.</p>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", required: "" %> <br />

    <div class="actions">
      <%= f.submit "Send", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
